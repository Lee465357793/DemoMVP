<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weiyi.mvpdemo.v.activity.ConstraintActivity">

    <TextView
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="left_text"
        app:layout_constraintBottom_toBottomOf="@+id/center_text"
        app:layout_constraintEnd_toStartOf="@+id/center_text"
        app:layout_constraintTop_toTopOf="@+id/center_text"/>

    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="top_text"
        app:layout_constraintBottom_toTopOf="@+id/center_text"
        app:layout_constraintEnd_toEndOf="@+id/center_text"
        app:layout_constraintStart_toStartOf="@+id/center_text"/>

    <TextView
        android:id="@+id/right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="right_text"
        app:layout_constraintBottom_toBottomOf="@+id/center_text"
        app:layout_constraintStart_toEndOf="@+id/center_text"
        app:layout_constraintTop_toTopOf="@+id/center_text"/>

    <TextView
        android:id="@+id/bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="bottom_text"
        app:layout_constraintEnd_toEndOf="@+id/center_text"
        app:layout_constraintStart_toStartOf="@+id/center_text"
        app:layout_constraintTop_toBottomOf="@+id/center_text"/>

    <TextView
        android:id="@+id/center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="center_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
